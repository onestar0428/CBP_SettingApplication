<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:padding="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:textAlignment="center"
            android:textColor="#eb7d7d"
            android:text="@string/led_red"/>
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:textAlignment="center"
            android:textColor="#7db2eb"
            android:text="@string/led_blue"/>
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:textColor="#7deb84"
            android:textAlignment="center"
            android:text="@string/led_green"/>
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:textColor="#ebe07d"
            android:textAlignment="center"
            android:text="@string/led_yellow"/>
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:textAlignment="center"
            android:textColor="#c17deb"
            android:text="@string/led_ir"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <NumberPicker
            android:id="@+id/numberPicker_red"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_margin="4dp"/>

        <NumberPicker
            android:id="@+id/numberPicker_blue"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_margin="4dp"/>

        <NumberPicker
            android:id="@+id/numberPicker_green"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_margin="4dp"/>

        <NumberPicker
            android:id="@+id/numberPicker_yellow"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_margin="4dp"/>

        <NumberPicker
            android:id="@+id/numberPicker_ir"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_margin="4dp"/>
    </LinearLayout>
</LinearLayout>